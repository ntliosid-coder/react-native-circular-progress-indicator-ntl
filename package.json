{
  "name": "react-native-circular-progress-indicator-ntl",
  "version": "1.0.0",
  "description": "React Native customizable circular progress indicator",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__"
  ],
  "scripts": {
    "test": "jest --forceExit",
    "lint": "eslint --ext .ts,.tsx . --max-warnings 0",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "tsc": "tsc",
    "ci": "yarn lint && yarn tsc",
    "build": "bob build",
    "prepare": "yarn build && husky install"
  },
  "repository": {
    "name": "GitHub",
    "type": "git",
    "url": "git+https://github.com/ntliosid-coder/react-native-circular-progress-indicator-ntl"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0",
    "react-native-reanimated": ">=2.2.0",
    "react-native-svg": ">=12.1.1"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/ntliosid-coder/react-native-circular-progress-indicator-ntl",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/runtime": "^7.25.6",
    "@react-native-community/eslint-config": "^3.4.1",
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.0.0",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^19.0.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.83.1",
    "react-native-builder-bob": "^0.30.0",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-reanimated": "4.2.1",
    "react-native-svg": "^15.6.0",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.5.4"
  },
  "resolutions": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "keywords": [
    "react-native",
    "react",
    "native",
    "animated",
    "reanimated",
    "chart",
    "ui",
    "animated-chart",
    "progress-indicator",
    "animated-progress-indicator",
    "animated-progress-bar",
    "circular-progress-bar",
    "circular-progress",
    "circular-progress-indicator",
    "mobile",
    "android",
    "ios"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "clearMocks": true,
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "transformIgnorePatterns": []
  },
  "dependencies": {
    "react-native-redash": "*"
  }
}
